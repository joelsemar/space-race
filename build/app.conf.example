---
app_name: "viewbox"
project_name: "anvil-viewbox-server"
env: local

# The path on your local machine where the code lives
# if this is provided, the vm(s) will run the code from your machine
# if not, a git repo is required
local_code_dir: "~/anvil-viewbox-server"
git_repo: "git@bitbucket.org:dweiss/anvil-viewbox-server.git"
git_branch: "dev"

# this port on your machine will be forwarded to the vm
# in this way you can access the server with localhost:8080 and be hitting vm:80
webserver_host_port: 8000
runserver_host_port: 9000

#the port the webserver is running on the vm
webserver_port: 80
runserver_port: 9000

webserver_user: "viewbox"
webserver_group: "www-data"
enable_cors: ""
git_provider: "bitbucket.org"
code_path: "/srv/anvil-viewbox-server" 
app_path: "/opt/viewbox"
manage_path: "/srv/anvil-viewbox-server/viewbox" 
db_user: viewbox
db_name: viewbox
db_password: viewbox
